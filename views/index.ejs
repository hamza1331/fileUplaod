<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Mongo File Upload</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">

                <h1 class="text-center display-4 my-4">Mongo File Upload</h1>
                <form action="/upload" enctype="multipart/form-data" method="POST">
                <div class="custom-file mb-3">
                    <input type="file" name="file" id="file" class="custom-file-input">
                    <label for="file" class="custom-file-label">File Submit</label>
                </div>
                <input type="submit" value="Submit" class="btn btn-info btn-block">
                </form>
                <hr>
                <% if(files){ %>
                <% files.forEach(function(file){ %>
                <div class="card card-body mb-3">
                    <% if(file.isImage){ %>
                        <a href="image/<%=file.filename%>"><img class="img img-responsive" width="100%" src="image/<%=file.filename%>" alt=""></a>
                    <%} else{ %>
                        <a href="getfile/<%=file.filename%>" target="_blank"><%=file.filename%></a>
                    <%} %>
                    <form action="/files/<%=file._id%>?_method=DELETE" method="post">
                    <button class="btn btn-danger btn-block mt-4">DELETE</button>
                    </form>
                </div>
                
                <% })%>
                <%} else{ %>
                    <p>No Files to Show</p>
                <% }%>
            </div>
        </div>
    </div>
</body>
</html>